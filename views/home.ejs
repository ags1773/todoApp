  <div class="container my-3">
    <div class="row mt-3">
      <% for (let todo of toDos) { %>
        <div class="card col-sm-6 col-md-4">
          <div class="card-body shadow bg-white rounded my-3">
            <h5 class="card-title"><%= todo.title %></h5>
            <ul class="list-group list-group-flush">
              <% for (let i = 0; i < todo.content.length; i++) { %>
                <% if (i < 3) { %>
                  <% if(todo.content[i].done) { %>
                    <li class="list-group-item done"><%= todo.content[i].data %></li>
                  <% } else { %>
                    <li class="list-group-item"><%= todo.content[i].data %></li>
                  <% } %>
                <% } else { %>
                  <li class="list-group-item">....</li>
                  <% break %>
                <% } %>
              <% } %>
            </ul>
            <div class="card-body pb-0">
              <a href="/<%= todo.id %>" class="btn btn-outline-dark btn-block">View</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

